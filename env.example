# ChefInvest Environment Variables
# Скопируйте этот файл в .env.local и заполните реальными значениями

# Основные настройки
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# База данных (для будущего использования)
# DATABASE_URL=postgresql://username:password@localhost:5432/chefinvest

# JWT токены (для аутентификации)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Криптовалютные кошельки
# USDT_TRC20_ADDRESS=TRC20_wallet_address_here
# USDT_BEP20_ADDRESS=BEP20_wallet_address_here

# API ключи (для будущих интеграций)
# COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
# ETHERSCAN_API_KEY=your-etherscan-api-key
# BSCSCAN_API_KEY=your-bscscan-api-key

# Email настройки (для уведомлений)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Мониторинг и аналитика
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Платежные системы (для будущего)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Социальные сети (для авторизации)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# Файловое хранилище (для будущего)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# Redis (для кэширования)
# REDIS_URL=redis://localhost:6379

# Логирование
# LOG_LEVEL=info
# LOG_FILE=logs/app.log
